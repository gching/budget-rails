<%= semantic_form_for product do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :owners, :as => :radio, :collection => Product::PEOPLE, label: "Who bought it?" %>
    <%= f.input :pay_list, :as => :check_boxes, :collection => Product::PEOPLE, label: "Who needs to pay?" %>
    <%= f.input :team, as: :radio, label: "For the team?" %>
    <%= f.input :payed, as: :radio, label: "Payed?" %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= link_to "Cancel", root_path, class:"btn btn-default" %>
  <% end %>
<% end %>
