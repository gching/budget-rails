<%= semantic_form_for @product do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :owners, :as => :radio, :collection => Product::PEOPLE %>
    <%= f.input :pay_list, :as => :check_boxes, :collection => Product::PEOPLE %>
    <%= f.input :team, label: "For the team?" %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= link_to "Cancel", root_path %>
  <% end %>
<% end %>
